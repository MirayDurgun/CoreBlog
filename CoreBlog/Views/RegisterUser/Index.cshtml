@model UserSignUpViewModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/inspinia-gh-pages/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/animate.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h3 class="logo-name">IN+</h3>

            </div>
            <h3>Kayıt Ekranı</h3>
            <p>Yeni bir hesap oluşturun</p>
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <span asp-validation-for="@Model.nameSurname" class="text-danger"></span> @*modelde oluşturduğumuz error mesajlarını gösterir*@
                    <input type="text" class="form-control" asp-for="@Model.nameSurname" placeholder="Adınız Soyadınız">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.mail" class="text-danger"></span>
                    <input type="email" class="form-control" asp-for="@Model.mail" placeholder="Email">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.userName" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.userName" placeholder="Kullanıcı Adı">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.password" class="text-danger"></span>
                    <input type="password" class="form-control" asp-for="@Model.password" placeholder="Şifre">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.confirmPassword" class="text-danger"></span>
                    <input type="password" class="form-control" asp-for="@Model.confirmPassword" placeholder="Şifre Tekrar">
                </div>

                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i> Kullanım şartlarını okudum, kabul ediyorum. </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Kayot Ol</button>

                <p class="text-muted text-center"><small>Bir hesabınız var mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/RegisterUser/Login/">Giriş Yap</a>

                <div class="text-danger" asp-validation-summary="ModelOnly">
                    @*bu şu işe yarar diyelimdeki şifrede bir karakter büyük harf olmalı ve biz yazmadık kayıt ola tıklayınca aşağıda listeler bunu startupta yönetiyoruz false true vererek*@
                </div>
            </form>
            <p class="m-t"> <small>Asp.Net Core 5.0 Proje Kampı | Tüm hakları saklıdır.  &copy; @DateTime.Now.Year</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/inspinia-gh-pages/js/jquery-3.1.1.min.js"></script>
    <script src="~/inspinia-gh-pages/js/popper.min.js"></script>
    <script src="~/inspinia-gh-pages/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/inspinia-gh-pages/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>
</html>
