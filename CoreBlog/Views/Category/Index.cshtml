@using EntityLayer.Concrete
@model List<Category>
@{
	Layout = null;
}
@*Bootstrap*@
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
@*------------*@
<table class="table table-bordered">

	<tr>
		<th>Id</th>
		<th>kategori adı</th>
		<th>durumu</th>
		<th>detaylar</th>
		<th>sil</th>
	</tr>
	@foreach (var item in Model) //var item in model üzerinden bir yapı kur.
	{

		<tr>
			<td>@item.CategoryID</td>
			<td>@item.CategoryName</td>
			<td>@item.CategoryStatus</td>
			<td><a href="#" class="btn btn-warning" style="border-radius:0.6rem; box-shadow:0 0 5px 1px darkgrey;">Detaylar</a></td>
			<td><a href="#" class="btn btn-danger" style="border-radius:0.6rem; box-shadow:0 0 5px 1px darkgrey;">Sil</a></td>
		</tr>
	}
</table>