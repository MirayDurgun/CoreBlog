@using EntityLayer.Concrete
@model List<Blog>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/UserLayout.cshtml";
}
@*Bootstrap*@
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
@*------------*@
<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Blog Posts</h3>
		<div class="inner-sec">
			<!--left-->
			<div class="left-blog-info-w3layouts-agileits text-left">
				<div class="row">
					@foreach (var item in Model) //var item in model üzerinden bir yapı kur.
					{
						<div class="col-lg-4 card mb-3">
							<a href="single.html">
								<img src="@item.BlogImage" class="card-img-top img-fluid" alt="">
							</a>
							<div class="card-body">
								<ul class="blog-icons my-4">
									<li>
										<a href="#">
											<i class="far fa-calendar-alt"></i> @(((DateTime)item.BlogCreateDate).ToString("d"))
											@*@(((DateTime)item.BlogCreateDate).ToString())*@
											@*DateTime türünde item.BlogCreateDate değerini çağır ve gelen değeri stringe çevir*@
										</a>
									</li>
									<li class="mx-2">
										<a href="#">
											<i class="far fa-comment"></i> @item.BlogID
										</a>
									</li>
									<li>
										<a href="#">
											<i class="fas fa-eye"></i> @item.Category.CategoryName
										</a>
									</li>

								</ul>
								<h5 class="card-title">
									<a href="single.html">@item.BlogTitle</a>
								</h5>
								<p class="card-text mb-3">
									@item.BlogContent.Substring(0,item.BlogContent.Substring(0,50).LastIndexOf(" "))....
								</p>
								@*LastIndexOf (" ") karşılaştığın ilk boşluğa kadar devam et*@
								<a href="single.html" class="btn btn-primary read-m">Devamını oku...</a>
							</div>
						</div>

					}
				</div>
			</div>
		</div>
	</div>
</section>

