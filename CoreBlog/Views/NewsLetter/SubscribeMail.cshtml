<script type="text/javascript">
    $("#btn").click(function () {
        let values = {
            Mail: $("#mail").val()
        };
        $.ajax({
            type: "post",
            url: "/Newsletter/SubscribeMail",
            data: values,
            success: function (func) {
                let result = jQuery.parseJSON(func);
            }
        });
    });
</script>

